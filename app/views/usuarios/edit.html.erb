<div class="container mt-4">
  <h1 class="mb-4">Editar Usuário</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= render "form", usuario: @usuario %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= link_to "Ver este usuário", @usuario, class: "btn btn-outline-primary" %>
    <%= link_to "Voltar para usuários", usuarios_path, class: "btn btn-secondary" %>
  </div>
</div>
