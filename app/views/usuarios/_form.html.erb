<%= form_with(model: usuario, class: "needs-validation") do |form| %>
  <% if usuario.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(usuario.errors.count, "erro") %> impediram este usu√°rio de ser salvo:
      </h4>
      <ul>
        <% usuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :telefone, class: "form-label" %>
    <%= form.telephone_field :telefone, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
