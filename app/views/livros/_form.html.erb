<%= form_with(model: livro, class: "needs-validation") do |form| %>
  <% if livro.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(livro.errors.count, "erro") %> impediram o salvamento do livro:</h4>
      <ul class="mb-0">
        <% livro.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :titulo, class: "form-label" %>
    <%= form.text_field :titulo, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :autor, class: "form-label" %>
    <%= form.text_field :autor, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :editora, class: "form-label" %>
    <%= form.text_field :editora, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :ano_publicacao, class: "form-label" %>
    <%= form.number_field :ano_publicacao, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :isbn, class: "form-label" %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :categoria_id, class: "form-label" %>
    <%= form.text_field :categoria_id, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
