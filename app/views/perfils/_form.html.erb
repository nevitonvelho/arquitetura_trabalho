<%= form_with(model: perfil, class: "needs-validation") do |form| %>
  <% if perfil.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(perfil.errors.count, "erro") %> impediram o salvamento do perfil:
      </h4>
      <ul class="mb-0">
        <% perfil.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :descricao, class: "form-label" %>
    <%= form.text_field :descricao, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
