<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="mb-4">Perfis</h1>

  <div id="perfils" class="row row-cols-1 g-4">
    <% @perfils.each do |perfil| %>
      <div class="col">
        <%= render perfil %>
        <div class="mt-2">
          <%= link_to "Ver este perfil", perfil, class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Novo perfil", new_perfil_path, class: "btn btn-success" %>
  </div>
</div>
